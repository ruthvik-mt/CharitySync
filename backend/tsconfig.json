{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"] // ✅ Add this line
  },
  "include": ["**/*.ts", "types"], // ✅ Add "types" here to include your type extensions
  "exclude": ["node_modules"]
}
